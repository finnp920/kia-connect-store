{
  "name": "kia-connect-store",
  "version": "1.0.0",
  "description": "Kia Connect Store - Display Themes",
  "scripts": {
    "sass:build": "sass assets/scss:assets/css --style compressed",
    "sass:watch": "sass --watch assets/scss:assets/css",
    "start": "npx http-server -p 8000 -c-1",
    "dev": "npx http-server -p 8000 -c-1 -o",
    "build": "npm run sass:build && echo 'SCSS compilation complete for Vercel'"
  },
  "keywords": [ "kia", "connect", "store" ],
  "author": "Kia Connect Store",
  "license": "UNLICENSED",
  "devDependencies": {
    "prettier": "^3.6.2",
    "sass": "^1.94.1"
  }
}
